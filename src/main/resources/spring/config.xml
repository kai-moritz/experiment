<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <!-- Anwendungs-Parameter über Java-Systemproperties auflösen -->
  <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="locations">
      <list>
        <value>classpath:fotos.properties</value>
      </list>
    </property>
    <property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE"/>
  </bean>

  <!-- Settings -->
  <bean id="maxFilesize" class="java.lang.Integer">
    <constructor-arg value="10485760"/><!-- 10 MB in bytes -->
  </bean>

  <bean name="quality" class="java.lang.Float">
    <constructor-arg value="0.7f"/>
  </bean>

  <bean name="max" class="java.lang.Integer">
    <constructor-arg value="8"/>
  </bean>

  <bean name="wait" class="java.lang.Integer">
    <constructor-arg value="5"/>
  </bean>

  <bean id="locale" class="java.util.Locale">
    <constructor-arg value="de"/>
  </bean>

  <bean id="maxAge" class="java.lang.Integer">
    <constructor-arg value="86400"/><!-- 60s * 60s * 24h = 1 Tag -->
  </bean>

  <bean id="serverMaxAge" class="java.lang.Integer">
    <constructor-arg value="60"/><!-- 60 Sekunden -->
  </bean>

</beans>
